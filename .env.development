# Rails 8 대학 규정 관리 및 AI 검색 시스템

# 개발 환경 설정 (로컬 개발용)
DATABASE_URL=postgres://postgres:password@db:5432/regulations_development
REDIS_URL=redis://redis:6379/0

# AI API 키 (실제 키로 교체 필요)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Docker 환경 플래그
DOCKER_ENV=true

# Rails 설정
RAILS_ENV=development
RAILS_LOG_LEVEL=debug

# 세션 암호화 키 (운영환경에서는 변경 필요)
SECRET_KEY_BASE=development_secret_key_base_change_in_production
OPENAI_API_KEY=sk-test-key-for-development
