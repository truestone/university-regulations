<div class="flex <%= message.user_message? ? 'justify-end' : 'justify-start' %> animate-fade-in" id="message_<%= message.id %>">
  <div class="max-w-xs sm:max-w-sm md:max-w-md lg:max-w-2xl xl:max-w-3xl <%= message.user_message? ? 'bg-primary-600 text-white' : 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white' %> rounded-2xl shadow-message border <%= message.user_message? ? 'border-primary-600' : 'border-gray-200 dark:border-gray-600' %> transition-all hover:shadow-lg">
    <div class="p-3 sm:p-4">
      <!-- 메시지 헤더 -->
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center space-x-2">
          <!-- 아바타 -->
          <div class="flex-shrink-0">
            <% if message.user_message? %>
              <div class="w-6 h-6 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
            <% else %>
              <div class="w-6 h-6 bg-primary-100 dark:bg-primary-900 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"></path>
                </svg>
              </div>
            <% end %>
          </div>
          
          <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-2">
            <span class="text-xs font-medium <%= message.user_message? ? 'text-primary-100' : 'text-gray-600 dark:text-gray-300' %>">
              <%= message.user_message? ? '사용자' : 'AI 어시스턴트' %>
            </span>
            <span class="text-xs <%= message.user_message? ? 'text-primary-200' : 'text-gray-500 dark:text-gray-400' %>">
              <%= time_ago_in_words(message.created_at) %> 전
            </span>
          </div>
        </div>
        
        <div class="flex items-center space-x-2">
          <span class="text-xs <%= message.user_message? ? 'text-primary-200' : 'text-gray-500 dark:text-gray-400' %> hidden sm:inline">
            <%= message.tokens_used %> 토큰
          </span>
          <!-- 메시지 액션 버튼 -->
          <button type="button" class="opacity-0 group-hover:opacity-100 p-1 rounded hover:bg-black hover:bg-opacity-10 transition-all" title="메시지 복사">
            <svg class="w-3 h-3 <%= message.user_message? ? 'text-primary-200' : 'text-gray-400 dark:text-gray-500' %>" fill="currentColor" viewBox="0 0 20 20">
              <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z"></path>
              <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- 메시지 내용 -->
      <div class="prose prose-sm max-w-none <%= message.user_message? ? 'prose-invert' : 'dark:prose-invert' %> leading-relaxed">
        <%= simple_format(message.content, class: "whitespace-pre-wrap break-words") %>
      </div>

      <!-- AI 메시지의 경우 소스 정보 표시 -->
      <% if message.assistant_message? && message.metadata&.dig('sources')&.any? %>
        <div class="mt-4 pt-3 border-t <%= message.user_message? ? 'border-primary-500' : 'border-gray-200 dark:border-gray-600' %>">
          <details class="group">
            <summary class="flex items-center justify-between cursor-pointer <%= message.user_message? ? 'text-primary-200' : 'text-gray-600 dark:text-gray-300' %> hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
              <span class="text-xs font-medium flex items-center">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                참고 자료 (<%= message.metadata['sources'].size %>개)
              </span>
              <svg class="w-4 h-4 transform group-open:rotate-180 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </summary>
            <div class="mt-3 space-y-2 animate-slide-up">
              <% message.metadata['sources'].each_with_index do |source, index| %>
                <div class="flex items-start space-x-2 p-2 rounded-lg <%= message.user_message? ? 'bg-white bg-opacity-10' : 'bg-gray-50 dark:bg-gray-600' %>">
                  <span class="flex-shrink-0 w-5 h-5 bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-400 rounded-full flex items-center justify-center text-xs font-medium">
                    <%= index + 1 %>
                  </span>
                  <div class="flex-1 min-w-0">
                    <p class="text-xs font-medium <%= message.user_message? ? 'text-primary-100' : 'text-gray-900 dark:text-white' %> truncate">
                      <%= source['title'] %>
                    </p>
                    <p class="text-xs <%= message.user_message? ? 'text-primary-200' : 'text-gray-500 dark:text-gray-400' %>">
                      ID: <%= source['id'] %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          </details>
        </div>
      <% end %>
    </div>
  </div>
</div>